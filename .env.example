# Environment variables template
# Copy this file to .env and fill in the values

# Database Configuration
POSTGRES_DB=contentsmith
POSTGRES_USER=contentsmith_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://contentsmith_user:your_secure_password_here@localhost:5432/contentsmith

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Application Configuration
APP_PORT=3000
NODE_ENV=production

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_very_secure_secret_key_at_least_32_characters_long

# JWT Configuration
JWT_SECRET=another_secure_secret_for_jwt_tokens

# Optional: External services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: File upload
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=/app/uploads

# Optional: Rate limiting
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes